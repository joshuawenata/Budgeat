<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Menu"
                android:textAlignment="center"
                android:textColor="#32B768"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menu Name"
                android:textColor="#9CA3AF"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/add_menu_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Your Menu Name"
                android:textColor="#374151"
                android:textSize="15sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/input_outline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menu Description"
                android:textColor="#9CA3AF"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/add_menu_description"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Your Menu Description"
                android:textColor="#374151"
                android:textSize="15sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/input_outline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menu Stock"
                android:textColor="#9CA3AF"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/add_menu_stock"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter a number"
                android:textColor="#374151"
                android:textSize="15sp"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/input_outline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_menu_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dummy_food"
                android:layout_marginLeft="50dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/add_image"
                android:background="@null"
                android:layout_marginHorizontal="30dp"
                android:onClick="addImage"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_big"
                android:background="@null"
                android:contentDescription="Add Button"
                android:onClick="addMenuDB"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>